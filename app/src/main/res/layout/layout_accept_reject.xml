<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_3"

    android:background="@drawable/bg_accept_reject">
    <de.hdodenhof.circleimageview.CircleImageView
     android:id="@+id/imgAcceptreject"
     android:layout_width="@dimen/dp_40"
     android:layout_height="@dimen/dp_40"
     app:civ_border_color="@color/civ_border"
     android:src="@drawable/default_profile_photo"
     />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/txtACNow"
        android:layout_marginLeft="@dimen/dp_10"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_7"
        android:text="@string/str_now"
        android:minWidth="@dimen/dp_80"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold|italic"

        android:layout_gravity="center_vertical"
        android:background="@drawable/bg_now_btn"/>
     <TextView
         android:id="@+id/txtACReserve"
         android:layout_width="wrap_content"
         android:layout_marginLeft="@dimen/dp_7"
         android:gravity="center"
         android:layout_height="wrap_content"
         android:padding="@dimen/dp_10"
         android:text="@string/str_reservation"
         android:minWidth="@dimen/dp_80"
         android:textColor="@android:color/white"
         android:textStyle="bold|italic"

         android:layout_gravity="center_vertical"
         android:background="@drawable/bg_reservation_btn"/>

</LinearLayout>