<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hoffmans.rush.ui.fragments.RecordFragment"
    android:background="@color/colorPrimaryDark">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearLoadMore"
        android:id="@+id/listRecords"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtNoRecords"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:text="No records found."
        android:textColor="@android:color/white"
        android:textStyle="bold|italic"/>

    <LinearLayout
        android:id="@+id/linearLoadMore"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_4"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressLoadMore"
            android:layout_gravity="center|center_horizontal"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textStyle="bold|italic"
            android:textSize="@dimen/sp_14"
            android:layout_gravity="center|center_horizontal"
            android:text="Loading.."/>
        </LinearLayout>


</RelativeLayout>
