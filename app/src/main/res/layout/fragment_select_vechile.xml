<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hoffmans.rush.ui.fragments.SelectVechileFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearVehicle">
        <fragment
            android:id="@+id/map_fragment"
            class="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:layout_gravity="top"
            android:orientation="vertical">
            <include
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                layout="@layout/layout_accept_reject"/>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_10"

                android:layout_height="wrap_content"
                android:id="@+id/addressRecycler"/>
            </LinearLayout>

        <ImageView
            android:id="@+id/imgAddMoreAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add_more_address"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/dp_3"/>

        </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/linearVehicle"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="4"
        android:background="@drawable/vehicle_selection_bg">

        <ImageView

            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/bike_icon"/>

        <ImageView
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/moto_icon"/>

        <ImageView
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/car_icon"/>

        <ImageView
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/truck_icon"/>
        </LinearLayout>



</RelativeLayout>
