<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>


    <!-- Default editext app style -->
    <style name="AppTheme.Input" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_edittext_shape</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/dp_3</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:paddingRight">@dimen/dp_2</item>
        <item name="android:paddingTop">@dimen/dp_2</item>
        <item name="android:paddingLeft">@dimen/dp_6</item>
        <item name="android:paddingBottom">@dimen/dp_2</item>
    </style>

    <style name="AppTheme.Input.Login" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_edittext_login</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:drawablePadding">@dimen/dp_10</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:padding">@dimen/dp_10</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">

        <item name="android:background">@drawable/button</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:padding">@dimen/dp_5</item>
    </style>


    <style name="AppTheme.Button.Driver" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_driver</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:paddingLeft">@dimen/dp_5</item>
        <item name="android:paddingRight">@dimen/dp_5</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="rating_bar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_progress</item>
        <item name="android:minHeight">24dip</item>
        <item name="android:maxHeight">70dip</item>
    </style>

    <style name="NavigationView">
        <item name="android:listDivider">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="BrandedSwitch.control" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#e6e600</item>
        <item name="colorSwitchThumbNormal">#cc0000</item>
    </style>


    <!-- Application theme. -->
    <style name="SplashTheme" parent="AppTheme">
        <!-- Disable window features like ActionBar, Title and Overlay. -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>
</resources>
