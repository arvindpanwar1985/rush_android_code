<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>


    <!-- Default editext app style -->
    <style name="AppTheme.Input" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_edittext_shape</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:drawablePadding">@dimen/dp_10</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:padding">@dimen/dp_10</item>
    </style>

    <style name="AppTheme.Input.Login" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_edittext_login</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:drawablePadding">@dimen/dp_10</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:padding">@dimen/dp_10</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">

        <item name="android:background">@drawable/bg_edittext_shape</item>
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:drawablePadding">@dimen/dp_10</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:padding">@dimen/dp_10</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="NavigationView" >
        <item name="android:listDivider">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>
</resources>
